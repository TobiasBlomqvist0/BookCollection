<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>BookCollection</title>
</head>
<body>
    <div id="topbar">
        <a href="/signup" class="topbar-links">Signup</a>
        <a href="/login" class="topbar-links">Login</a>
        <a href="/home" class="topbar-links">DashBoard</a>
    </div>
    
        <div id="books">
            <h1>Welcome</h1>
            <% db.forEach(books => { %>
            <a href="/home/book/<%= books.id %>" class="book-link">
                <div style="border: 2px solid black; text-align:center;" class="displayed-books">
                    <h2>Name: <%= books.name %> </h2>
                    <h2>Author: <%= books.author %> </h2>
                </div> 
            </a>
            <% }) %>
        </div>
    
</body>
</html>